{
    "compilerOptions": {
      "experimentalDecorators": true,
      "baseUrl": ".",
      "outDir": "types",
      // "rootDirs": [
      //   "src"
      // ],
      "declaration": true,
      "declarationDir": "types",
      "emitDeclarationOnly": true,
      "target": "ESNext",
      "module": "ESNext",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext",
        "webworker"
      ],
      "paths": {
        "src/*": [
          "src/*"
        ]
      },
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "jsx": "react",
      // "typeRoots": [
      //   "./node_modules/@types",
      //   "src/typings"
      // ],
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ]
  }
